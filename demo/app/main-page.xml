<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:ptr="@nativescript-community/ui-pulltorefresh" navigatingTo="navigatingTo">
  <ActionBar title="demo" />
  <GridLayout>
    <ptr:PullToRefresh indicatorColor="red" indicatorFillColor="lightgray" refresh="refreshList">
      <ListView items="{{ items }}">
        <ListView.template>
          <StackLayout>
            <Label text="{{ $value }}"></Label>
          </StackLayout>
        </ListView.template>
      </ListView>
    </ptr:PullToRefresh>
  </GridLayout>
</Page>
